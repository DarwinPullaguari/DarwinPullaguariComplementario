<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DarwinPullaguariComplementario.Views.vLogin"
             Title="Inicio de Sesion">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Usuario" x:Name="UsuarioEntry"/>
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="ContrasenaEntry"/>
        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked"/>
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>